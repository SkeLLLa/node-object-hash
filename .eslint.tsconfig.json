{
    "compilerOptions": {
      "baseUrl": ".",
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "newLine": "LF",
      "noErrorTruncation": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "lib": ["ES2018"],
      "outDir": "dist",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": ["./typings", "./typings/**", "./node_modules/@types"],
      "resolveJsonModule": true,
      "sourceMap": true,
      "strictNullChecks": true,
      "target": "ES2018"
    },
    "include": ["test/**/*.ts"]
  }